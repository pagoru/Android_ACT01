<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.pagoru.act01">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.NewTaskActivity" />
        <activity android:name=".activities.ModifyTaskActivity" />
        <activity android:name=".activities.MovementsCalendarActivity" />
        <activity android:name=".activities.MovementsArticleActivity" />
        <activity android:name=".activities.WeatherCityListActivity" />
        <activity android:name=".activities.WeatherCityActivity" />
        <activity android:name=".activities.AddWeatherActivity"></activity>
    </application>

</manifest>